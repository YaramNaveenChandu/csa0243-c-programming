#include<stdio.h>
int main ()
{
int num, sum = 0;
num = 1234;
printf("The number is = %d\n",num);
while(num!=0){
sum += num % 10;
num = num / 10;
}
printf("Sum: %d\n",sum);
return 0;
}


reverse digits of a number

#include<stdio.h>  
 int main()    
{    
int n, reverse=0, rem;    
printf("Enter a number: ");    
  scanf("%d", &n);    
  while(n!=0)    
  {    
     rem=n%10;    
     reverse=reverse*10+rem;    
     n/=10;    
  }    
  printf("Reversed Number: %d",reverse);    
return 0;  
}   
